xml.div({:id=>:data}) do

  xml.a({:href=>url_for({:controller=>'csv',:id=>@current_conference.acronym,:action=>:resources})}) do
    xml.span( 'CSV', {:class=>:button} )
  end

  xml.table({:id=>:report_resources_table,:class=>:sortable}) do
    xml.thead do
      xml.tr do
        xml.th( local( 'event::title'), {:colspan=>2} )
        xml.th( local( 'event::resources') )
      end
    end

    xml.tbody do
      @rows.each do | row |
        xml.tr do
          xml.td do
            xml.a({:href=>url_for(:controller=>'event',:action=>:edit,:event_id=>row.event_id)}) do
              xml.img({:src=>url_for(:controller=>'image',:action=>:event,:id=>row.event_id,:size=>'24x24')})
            end
          end
          xml.td do xml << format_event( row ) end
          xml.td do
            xml.a(row.resources,{:style=>'white-space: pre-line',:href=>url_for(:controller=>'event',:action=>:edit,:event_id=>row.event_id)})
          end
        end
      end
    end

    xml.tfoot do
      xml.tr do
        xml.th( local( 'event::title'), {:colspan=>2} )
        xml.th( local( 'event::resources') )
      end
    end

  end

  xml.a({:href=>url_for({:controller=>'csv',:id=>@current_conference.acronym,:action=>:resources})}) do
    xml.span( 'CSV', {:class=>:button} )
  end

end

